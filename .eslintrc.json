{
	"extends": "airbnb",
	"env": {
		"browser": true,
		"jest": true
	},
	"plugins": [
		"react",
		"jsx-a11y",
		"import",
		"react-hooks"
	],
	"rules": {
		"react-hooks/rules-of-hooks": "error",
		"arrow-parens": [
			"error",
			"always"
		],
		"react/forbid-prop-types": 0,
		"react/jsx-filename-extension": 0,
		"react/jsx-indent": [
			2,
			"tab"
		],
		"react/jsx-indent-props": [
			2,
			"tab"
		],
		"padded-blocks": [
			"error",
			{
				"classes": "always"
			}
		],
		"class-methods-use-this": 0,
		"react/prefer-stateless-function": 0,
		"jsx-a11y/anchor-is-valid": 0,
		"jsx-a11y/label-has-for": [
			2,
			{
				"components": [
					"label"
				],
				"required": {
					"some": [
						"nesting",
						"id"
					]
				},
				"allowChildren": false
			}
		],
		"no-param-reassign": 0,
		"no-tabs": 0,
		"max-len": 0,
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		]
	},
	"globals": {
		"__APP_NETWORK_URL__": false,
		"__SOCKET_URL__": false,
		"__APP_CONTRACT_LUV_TOKEN__": false,
		"__APP_CONTRACT_SDC_TOKEN__": false,
		"__APP_EXPLORER_ADDRESS__": false,
		"__APP_CONTRACT_SWAP__": false,
		"__APP_CONTRACT_ESCROW__": false,
		"Camera": false,
		"QRScanner": false
	}
}
